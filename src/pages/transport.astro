---
import BaseLayout from "../layouts/BaseLayout.astro";
import SlowBall from "../components/SlowBall.astro";
import ArticleText from "../components/ArticleText.astro";
import RsvpButton from "../components/RsvpButton.astro";
---

<BaseLayout>
  <main id="swup" class="flex-1">
    <section
      class="container max-w-[640px] mx-auto grid items-center justify-center pt-6 z-10"
    >
      <div class="atropos my-atropos">
        <!-- scale container (required) -->
        <div class="atropos-scale">
          <!-- rotate container (required) -->
          <div class="atropos-rotate">
            <!-- inner container (required) -->
            <div class="atropos-inner">
              <a href="/rsvp">
                <div
                  class="w-full bg-center w-full bg-cover rounded-lg flex items-center justify-center p-4 z-10 grayscale"
                  style="background-image:url('https://picsum.photos/seed/bus/600/200')"
                >
                  <div
                    class="w-full flex items-center flex-col justify-center pt-6 py-1"
                  >
                    <h3 class="py-3 text-white bg-black px-3 rounded-md mb-2">
                      Add your transport details to your RSVP
                    </h3>
                    <RsvpButton />
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div>
        <SlowBall />
        <ArticleText
          class="mt-16 prose bg-white rounded-md bg-white rounded-md"
        >
          <h1 class="text-center text-sm uppercase">Transport</h1>
          <h2 class="text-center mt-2 font-light">How to get there...</h2>
          <p class="gara">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. A vero
            nobis tempora, maiores officiis voluptatibus aliquam quo deserunt
            obcaecati iure ipsam, necessitatibus quod, quisquam sequi natus vel.
            Aut, temporibus similique?
          </p>
          <RsvpButton />

          <h2 class="text-center font-light">Where to stay...</h2>
          <p class="gara">
            We encourage our guests to stay locally in the mornington peninsula
            region. Here is a list of available accomadation
          </p>
        </ArticleText>
      </div>
    </section>
  </main>
</BaseLayout>
