---
import BaseLayout from "../layouts/BaseLayout.astro";
import ArticleText from "../components/ArticleText.astro";
import LocationMap from "../components/LocationMap.astro";
import MainBlock from "../components/MainBlock.astro";
// import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<BaseLayout>
  <main
    id="swup"
    class="flex-1 z-10 bg-green-5 bg-cover pb-16"
    style="background-image:url('./Functions_01.jpeg"
  >
    <div class="w-full bg-gradient-to-b from-white to-transparent h-16"></div>
    <section
      class="container max-w-[640px] mx-auto grid items-center justify-center pt-6"
    >
      <ArticleText
        class="mt-16 prose"
        style="background-image:url('/main-img.png')"
      >
        <h1 class="text-center text-sm uppercase">Venue</h1>
        <h2 class="text-center text-4xl mt-2 font-light">
          Port Phillip Estate, Red Hill
        </h2>
        <p class="gara">
          Port Phillip Estate in Red Hill <a href="#"
            >263 Red Hill Rd, Red Hill South Vic 393</a
          >
        </p>
        <p class="gara">
          Port Phillip estate is situated in Red Hill in the heart of the
          Mornington peninsula wine region.
        </p>
        <p class="gara font-bold">Parking available on site.</p>
      </ArticleText>
    </section>
    <section
      class="container max-w-[640px] w-full mx-auto grid items-center justify-center pt-6 px-1 rounded-md"
    >
    </section>
    <section
      class="container max-w-[640px] mx-auto grid items-center justify-center pt-6"
    >
      <ArticleText><LocationMap /></ArticleText>
    </section>
  </main>
</BaseLayout>
